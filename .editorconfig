root = true

[*]
charset = utf-8
insert_final_newline = true
trim_trailing_whitespace = true
end_of_line = lf

[*.{yml,yaml}]
indent_style = space
indent_size = 2

[*.json]
indent_style = space
indent_size = 2

[*.{sh,bash,fish}]
indent_style = space
indent_size = 2

[{Makefile,*.mk}]
indent_style = tab

[{.gitconfig,*.gitconfig}]
indent_style = space
indent_size = 4
